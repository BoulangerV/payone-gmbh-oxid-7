{% set sEnvironment = oViewConf.fcpoGetPayoneSecureEnvironment(sPaymentID) %}
{% set sPaylaPartnerId = "e7yeryF2of8X" %}
{% set sPartnerMerchantId = oViewConf.fcpoGetMerchantId() %}
{% set sSnippetToken = oViewConf.fcpoGetBNPLDeviceToken(sPaylaPartnerId, sPartnerMerchantId) %}

<script id="paylaDcs" type="text/javascript"
        src="https://d.payla.io/dcs/{{ sPaylaPartnerId }}/{{ sPartnerMerchantId }}/dcs.js"></script>
<script>
    if (typeof paylaDcsT === 'undefined') {
        let paylaDcsT = paylaDcs.init("{{ sEnvironment }}", "{{ sSnippetToken }}");
    }
</script>

<link id="paylaDcsCss" type="text/css" rel="stylesheet"
      href="https://d.payla.io/dcs/dcs.css?st={{ sSnippetToken }}&pi={{ sPaylaPartnerId }}&psi={{ sPartnerMerchantId }}&e={{ sEnvironment }}">
<input type="hidden" name="dynvalue[fcpopl_device_token]" value="{{ sSnippetToken }}">
