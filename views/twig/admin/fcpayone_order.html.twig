{% include "headitem.html.twig" with {title: "[OXID Benutzerverwaltung]"} %}
{% set currStatus = oView.fcpoGetCurrentStatus() %}
{% set status_oxid = oView.fcpoGetStatusOxid() %}
{% set status = oView.getStatus() %}

{{ script({ include: oViewConf.fcpoGetModuleJsPath('fcpayone_order.js'), dynamic: __oxid_include_dynamic }) }}


{% if readonly %}
    {% set readonly = "readonly disabled" %}
{% else %}
    {% set readonly = "" %}
{% endif %}

<form autocomplete="off" name="transfer" id="transfer" action="{{ oViewConf.getSelfLink() }}" method="post">
    {{ oViewConf.getHiddenSid() }}
    <input type="hidden" name="oxid" value="{{ oxid }}">
    <input type="hidden" name="status_oxid" value="{{ status_oxid }}">
    <input type="hidden" name="cl" value="FcPayOneOrder">
</form>

<form autocomplete="off" name="myedit" id="myedit" action="{{ oViewConf.getSelfLink() }}" method="post">
    {{ oViewConf.getHiddenSid() }}
    <input type="hidden" name="cl" value="FcPayOneOrder">
    <input type="hidden" name="fnc" value="">
    <input type="hidden" name="oxid" value="{{ oxid }}">
    <input type="hidden" name="status_oxid" value="{{ status_oxid }}">
    <input type="hidden" id="fc_error_message_capture_greater_null"
           value="{{ translate({ ident: "FCPO_CAPTURE_AMOUNT_GREATER_NULL" }) }}">
    <input type="hidden" id="fc_confirm_message" value="{{ translate({ ident: "FCPO_ARE_YOU_SURE" }) }}">

    <table border="0" width="98%">
        <tr>
            <td width="45%" valign="top">
                <table>
                    {% if edit.oxorder__fcpoordernotchecked.value == 1 %}
                        <tr>
                            <td class="edittext" colspan="2">
                                <strong style="color:red;">{{ translate({ ident: "FCPO_ORDERNOTCHECKED" }) }}</strong>
                            </td>
                        </tr>
                    {% endif %}
                    {% if oView.fcpoGetRequestMessage() %}
                        <tr>
                            <td class="edittext" colspan="2">
                                <strong>{{ oView.fcpoGetRequestMessage() }}</strong>
                            </td>
                        </tr>
                    {% endif %}
                    <tr>
                        <td class="edittext" style="width: 200px;">
                            {{ translate({ ident: "FCPO_REFNR" }) }}
                        </td>
                        <td class="edittext">
                            {{ edit.oxorder__fcporefnr.value }}
                        </td>
                    </tr>

                    <tr>
                        <td class="edittext">
                            {{ translate({ ident: "FCPO_TXID" }) }}
                        </td>
                        <td class="edittext">
                            {{ edit.oxorder__fcpotxid.value }}
                        </td>
                    </tr>
                    {% set sMandateUrl = oView.fcpoGetMandatePdfUrl() %}
                    {% if sMandateUrl %}
                        <tr>
                            <td class="edittext">
                                {{ translate({ ident: "FCPO_MANDATE_PDF" }) }}
                            </td>
                            <td class="edittext">
                                <a href="{{ sMandateUrl }}" target="_blank"
                                   style="text-decoration:underline;">{{ translate({ ident: "FCPO_MANDATE_DOWNLOAD" }) }}</a>
                            </td>
                        </tr>
                    {% endif %}

                    {% set lastStatus = edit.getLastStatus() %}
                    {% if lastStatus %}
                        <tr>
                            <td class="edittext">
                                {{ translate({ ident: "FCPO_PAYMENTTYPE" }) }}
                            </td>
                            <td class="edittext">
                                {{ lastStatus.getClearingtype() }}
                            </td>

                        </tr>

                        {% if lastStatus.fcpotransactionstatus__fcpo_bankaccount.value != '' %}
                            <tr>
                                <td class="edittext">
                                    {{ translate({ ident: "FCPO_BANKACCOUNT" }) }}
                                </td>
                                <td class="edittext">
                                    {{ lastStatus.fcpotransactionstatus__fcpo_bankaccount.value }}
                                </td>
                            </tr>
                        {% endif %}

                        {% if lastStatus.fcpotransactionstatus__fcpo_bankcode.value != '' %}
                            <tr>
                                <td class="edittext">
                                    {{ translate({ ident: "FCPO_BANKCODE" }) }}
                                </td>
                                <td class="edittext">
                                    {{ lastStatus.fcpotransactionstatus__fcpo_bankcode.value }}
                                </td>
                            </tr>
                        {% endif %}

                        {% if lastStatus.fcpotransactionstatus__fcpo_bankaccountholder.value != '' %}
                            <tr>
                                <td class="edittext">
                                    {{ translate({ ident: "FCPO_BANKACCOUNTHOLDER" }) }}
                                </td>
                                <td class="edittext">
                                    {{ lastStatus.fcpotransactionstatus__fcpo_bankaccountholder.value }}
                                </td>
                            </tr>
                        {% endif %}

                        {% if lastStatus.fcpotransactionstatus__fcpo_cardexpiredate.value != '' %}
                            <tr>
                                <td class="edittext">
                                    {{ translate({ ident: "FCPO_CARDEXPIREDATE" }) }}
                                </td>
                                <td class="edittext">
                                    {{ lastStatus.fcpotransactionstatus__fcpo_cardexpiredate.value }}
                                </td>
                            </tr>
                        {% endif %}

                        {% if lastStatus.fcpotransactionstatus__fcpo_cardtype.value != '' %}
                            <tr>
                                <td class="edittext">
                                    {{ translate({ ident: "FCPO_CARDTYPE" }) }}
                                </td>
                                <td class="edittext">
                                    {{ lastStatus.getCardtype() }}
                                </td>
                            </tr>
                        {% endif %}

                        {% if lastStatus.fcpotransactionstatus__fcpo_cardpan.value != '' %}
                            <tr>
                                <td class="edittext">
                                    {{ translate({ ident: "FCPO_CARDPAN" }) }}
                                </td>
                                <td class="edittext">
                                    {{ lastStatus.fcpotransactionstatus__fcpo_cardpan.value }}
                                </td>
                            </tr>
                        {% endif %}

                    {% endif %}

                    {% if edit.allowCapture() %}
                        {% set blShowCapture = true %}
                        {% if edit.isDetailedProductInfoNeeded() %}
                            {% set blShowCapture = false %}
                            {% set oOrderarticles = edit.getOrderArticles() %}
                            {% for oOrderArt in oOrderarticles %}
                                {% set iLeftAmount = oOrderArt.oxorderarticles__oxamount.value-$oOrderArt.oxorderarticles__fcpocapturedamount.value %}
                                {% if iLeftAmount > 0 %}
                                    {% set blShowCapture = true %}
                                {% endif %}
                            {% endfor %}
                            {% if blShowCapture == true %}
                                <tr>
                                    <td colspan="2" style="border-bottom: 1px solid black;"></td>
                                </tr>
                                <tr>
                                    <td class="edittext" colspan="2">
                                        <strong>{{ translate({ ident: "FCPO_CAPTURE" }) }}</strong></td>
                                </tr>
                                <tr>
                                    <td colspan="2">&nbsp;</td>
                                </tr>
                                <tr>
                                    <td class="edittext">
                                        <strong>{{ translate({ ident: "FCPO_PREAUTHORIZED_AMOUNT" }) }}</strong>
                                    </td>
                                    <td class="edittext">
                                        {{ edit.oxorder__oxtotalordersum.value|number_format(2, ",", "") }} {{ edit.oxorder__oxcurrency.value }}
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <table border="0" cellpadding="5" callspacing="5">
                                            <tr>
                                                <th>{{ translate({ ident: "FCPO_PRODUCT_CAPTURE" }) }}</th>
                                                <th>{{ translate({ ident: "FCPO_PRODUCT_AMOUNT" }) }}</th>
                                                <th>{{ translate({ ident: "FCPO_PRODUCT_PRICE" }) }}</th>
                                                <th>{{ translate({ ident: "FCPO_PRODUCT_TITLE" }) }}</th>
                                            </tr>
                                            {% for oOrderArt in oOrderarticles %}
                                                {% set iLeftAmount = oOrderArt.oxorderarticles__oxamount.value-$oOrderArt.oxorderarticles__fcpocapturedamount.value %}
                                                {% if iLeftAmount > 0 %}
                                                    <tr>
                                                        <td>
                                                            <input type="hidden"
                                                                   name="capture_positions[{{ oOrderArt.getId() }}][price]"
                                                                   value="{{ oOrderArt.oxorderarticles__oxbprice.value }}">
                                                            <input type="hidden"
                                                                   name="capture_positions[{{ oOrderArt.getId() }}][capture]"
                                                                   value="0">
                                                            <input type="checkbox"
                                                                   name="capture_positions[{{ oOrderArt.getId() }}][capture]"
                                                                   value="1" checked>
                                                        </td>
                                                        <td><input type="text" size="3"
                                                                   name="capture_positions[{{ oOrderArt.getId() }}][amount]"
                                                                   value="{{ iLeftAmount }}"></td>
                                                        <td>{{ oOrderArt.oxorderarticles__oxbprice.value|number_format(2, ",", "") }} {{ edit.oxorder__oxcurrency.value }}</td>
                                                        <td>{{ oOrderArt.oxorderarticles__oxtitle.value }}</td>
                                                    </tr>
                                                {% endif %}
                                            {% endfor %}
                                        </table>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="edittext">
                                        <strong>{{ translate({ ident: "FCPO_COMPLETE_ORDER" }) }}</strong>
                                    </td>
                                    <td class="edittext">
                                        <input type="hidden" name="capture_completeorder" value="0">
                                        <input type="checkbox" name="capture_completeorder" value="1">
                                    </td>
                                </tr>
                                <tr>
                                    <td class="edittext" colspan="2">
                                        <input type="button"
                                               onclick="document.myedit.fnc.value='capture';document.myedit.submit();return false;"
                                               value="{{ translate({ ident: "FCPO_EXECUTE" }) }}"
                                               style="padding: 0 4px 0 4px;">
                                    </td>
                                </tr>
                            {% endif %}
                        {% else %}
                            <tr>
                                <td colspan="2" style="border-bottom: 1px solid black;"></td>
                            </tr>
                            <tr>
                                <td class="edittext" colspan="2">
                                    <strong>{{ translate({ ident: "FCPO_CAPTURE" }) }}</strong></td>
                            </tr>
                            <tr>
                                <td class="edittext">
                                    <strong>{{ translate({ ident: "FCPO_PREAUTHORIZED_AMOUNT" }) }}</strong>
                                </td>
                                <td class="edittext">
                                    {{ edit.oxorder__oxtotalordersum.value|number_format(2, ",", "") }} {{ edit.oxorder__oxcurrency.value }}
                                </td>
                            </tr>
                            <tr>
                                <td class="edittext">
                                    <strong>{{ translate({ ident: "FCPO_AMOUNT_IN" }) }} {{ edit.oxorder__oxcurrency.value }}</strong>
                                </td>
                                <td class="edittext">
                                    <input id="fc_capture_amount" type="text" name="capture_amount" value="0,00">
                                    <input type="button" onclick="onClickCapture(this);"
                                           value="{{ translate({ ident: "FCPO_EXECUTE" }) }}"
                                           style="padding: 0 4px 0 4px;">
                                </td>
                            </tr>
                        {% endif %}
                    {% endif %}
                    {% if edit.allowAccountSettlement() and blShowCapture == true %}
                        <tr>
                            <td class="edittext">
                                <strong>{{ translate({ ident: "FCPO_SETTLE_ACCOUNT" }) }}</strong>
                            </td>
                            <td class="edittext">
                                <input type="hidden" name="capture_settleaccount" value="0">
                                <input type="checkbox" name="capture_settleaccount" value="1" checked>
                                {% include "inputhelp.html.twig" with {'sHelpId': help_id("FCPO_HELP_SETTLE_ACCOUNT"), 'sHelpText': help_text("FCPO_HELP_SETTLE_ACCOUNT")} %}
                            </td>
                        </tr>
                    {% endif %}

                    {% if edit.allowDebit() %}
                        {% set blShowDebit = true %}
                        {% capture name = "debit_block" %}
                            <tr>
                                <td colspan="2" style="border-bottom: 1px solid black;"></td>
                            </tr>
                            <tr>
                                <td class="edittext" colspan="2">
                                    <strong>{{ translate({ ident: "FCPO_DEBIT" }) }}</strong></td>
                            </tr>
                            {% if edit.debitNeedsBankData() %}
                                <tr>
                                    <td class="edittext" colspan="2"
                                        style="width: 300px;">{{ translate({ ident: "FCPO_HEADER_BANKACCOUNT" }) }} -
                                        <span id="fcShowBankaccount" style="width: 100px;">
                                            <a href="#"
                                               onclick="toggleBankaccount();return false;">{{ translate({ ident: "FCPO_SHOW" }) }}</a>
                                        </span>
                                        <span id="fcHideBankaccount" style="display: none;width: 100px;">
                                            <a href="#"
                                               onclick="toggleBankaccount();return false;">{{ translate({ ident: "FCPO_HIDE" }) }}</a>
                                        </span>
                                    </td>
                                </tr>
                                <tr id="fcBankAccount1" style="display: none;">
                                    <td class="edittext">
                                        {{ translate({ ident: "FCPO_BANKCOUNTRY" }) }}
                                    </td>
                                    <td>
                                        <select name="debit_bankcountry" class="editinput">
                                            <option value="DE">{{ translate({ ident: "FCPO_DE" }) }}</option>
                                            <option value="AT">{{ translate({ ident: "FCPO_AT" }) }}</option>
                                            <option value="NL">{{ translate({ ident: "FCPO_NL" }) }}</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr id="fcBankAccount2" style="display: none;">
                                    <td class="edittext">
                                        {{ translate({ ident: "FCPO_BANKACCOUNT" }) }}
                                    </td>
                                    <td>
                                        <input type="text" name="debit_bankaccount" value="">
                                    </td>
                                </tr>
                                <tr id="fcBankAccount3" style="display: none;">
                                    <td class="edittext">
                                        {{ translate({ ident: "FCPO_BANKCODE" }) }}
                                    </td>
                                    <td>
                                        <input type="text" name="debit_bankcode" value="">
                                    </td>
                                </tr>
                                <tr id="fcBankAccount4" style="display: none;">
                                    <td class="edittext">
                                        {{ translate({ ident: "FCPO_BANKACCOUNTHOLDER" }) }}
                                    </td>
                                    <td>
                                        <input type="text" name="debit_bankaccountholder" value="">
                                    </td>
                                </tr>
                            {% endif %}
                            {% if edit.isDetailedProductInfoNeeded() %}
                                {% set blShowDebit = false %}
                                {% set oOrderarticles = edit.getOrderArticles() %}
                                <tr>
                                    <td colspan="2">&nbsp;</td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <table border="0" cellpadding="5" callspacing="5">
                                            <tr>
                                                <th>{{ translate({ ident: "FCPO_PRODUCT_CAPTURE" }) }}</th>
                                                <th>{{ translate({ ident: "FCPO_PRODUCT_AMOUNT" }) }}</th>
                                                <th>{{ translate({ ident: "FCPO_PRODUCT_PRICE" }) }}</th>
                                                <th>{{ translate({ ident: "FCPO_PRODUCT_TITLE" }) }}</th>
                                            </tr>
                                            {% for oOrderArt in oOrderarticles %}
                                                {% if edit.oxorder__fcpoauthmode.value == 'preauthorization' %}
                                                    {% set iLeftAmount = oOrderArt.oxorderarticles__fcpocapturedamount.value-$oOrderArt.oxorderarticles__fcpodebitedamount.value %}
                                                {% else %}
                                                    {% set iLeftAmount = oOrderArt.oxorderarticles__oxamount.value-$oOrderArt.oxorderarticles__fcpodebitedamount.value %}
                                                {% endif %}
                                                {% if iLeftAmount > 0 %}
                                                    {% set blShowDebit = true %}
                                                    <tr>
                                                        <td>
                                                            <input type="hidden"
                                                                   name="debit_positions[{{ oOrderArt.getId() }}][price]"
                                                                   value="{{ oOrderArt.oxorderarticles__oxbprice.value }}">
                                                            <input type="hidden"
                                                                   name="debit_positions[{{ oOrderArt.getId() }}][debit]"
                                                                   value="0">
                                                            <input type="checkbox"
                                                                   name="debit_positions[{{ oOrderArt.getId() }}][debit]"
                                                                   value="1" checked>
                                                        </td>
                                                        <td>
                                                            {% if edit.oxorder__fcpoauthmode.value == 'preauthorization' %}
                                                                <input type="text" size="3"
                                                                       name="debit_positions[{{ oOrderArt.getId() }}][amount]"
                                                                       value="{{ oOrderArt.oxorderarticles__fcpocapturedamount.value }}">
                                                            {% else %}
                                                                <input type="text" size="3"
                                                                       name="debit_positions[{{ oOrderArt.getId() }}][amount]"
                                                                       value="{{ iLeftAmount }}">
                                                            {% endif %}
                                                        </td>
                                                        <td>{{ oOrderArt.oxorderarticles__oxbprice.value|number_format(2, ",", "") }} {{ edit.oxorder__oxcurrency.value }}</td>
                                                        <td>{{ oOrderArt.oxorderarticles__oxtitle.value }}</td>
                                                    </tr>
                                                {% endif %}
                                            {% endfor %}
                                            {% if edit.oxorder__oxdelcost.value != 0 and edit.oxorder__fcpodelcostdebited.value == 0 %}
                                                {% set blShowDebit = true %}
                                                <tr>
                                                    <td>
                                                        <input type="hidden" name="debit_positions[oxdelcost][price]"
                                                               value="{{ edit.oxorder__oxdelcost.value }}">
                                                        <input type="hidden" name="debit_positions[oxdelcost][debit]"
                                                               value="0">
                                                        <input type="checkbox" name="debit_positions[oxdelcost][debit]"
                                                               value="1" checked>
                                                    </td>
                                                    <td><input type="hidden" name="debit_positions[oxdelcost][amount]"
                                                               value="1">1
                                                    </td>
                                                    <td>{{ edit.oxorder__oxdelcost.value|number_format(2, ",", "") }} {{ edit.oxorder__oxcurrency.value }}</td>
                                                    <td>
                                                        {% if edit.oxorder__oxdelcost.value > 0 %}
                                                            {{ translate({ ident: "FCPO_SURCHARGE" }) }}
                                                        {% else %}
                                                            {{ translate({ ident: "FCPO_DEDUCTION" }) }}
                                                        {% endif %}
                                                        {{ translate({ ident: "FCPO_SHIPPINGCOST" }) }}
                                                    </td>
                                                </tr>
                                            {% endif %}
                                            {% if edit.oxorder__oxpaycost.value != 0 and edit.oxorder__fcpopaycostdebited.value == 0 %}
                                                {% set blShowDebit = true %}
                                                <tr>
                                                    <td>
                                                        <input type="hidden" name="debit_positions[oxpaycost][price]"
                                                               value="{{ edit.oxorder__oxpaycost.value }}">
                                                        <input type="hidden" name="debit_positions[oxpaycost][debit]"
                                                               value="0">
                                                        <input type="checkbox" name="debit_positions[oxpaycost][debit]"
                                                               value="1" checked>
                                                    </td>
                                                    <td><input type="hidden" name="debit_positions[oxpaycost][amount]"
                                                               value="1">1
                                                    </td>
                                                    <td>{{ edit.oxorder__oxpaycost.value|number_format(2, ",", "") }} {{ edit.oxorder__oxcurrency.value }}</td>
                                                    <td>
                                                        {% if edit.oxorder__oxpaycost.value > 0 %}
                                                            {{ translate({ ident: "FCPO_SURCHARGE" }) }}
                                                        {% else %}
                                                            {{ translate({ ident: "FCPO_DEDUCTION" }) }}
                                                        {% endif %}
                                                        {{ translate({ ident: "FCPO_PAYMENTTYPE" }) }}
                                                    </td>
                                                </tr>
                                            {% endif %}
                                            {% if edit.oxorder__oxwrapcost.value != 0 and edit.oxorder__fcpowrapcostdebited.value == 0 %}
                                                {% set blShowDebit = true %}
                                                <tr>
                                                    <td>
                                                        <input type="hidden" name="debit_positions[oxwrapcost][price]"
                                                               value="{{ edit.oxorder__oxwrapcost.value }}">
                                                        <input type="hidden" name="debit_positions[oxwrapcost][debit]"
                                                               value="0">
                                                        <input type="checkbox" name="debit_positions[oxwrapcost][debit]"
                                                               value="1" checked>
                                                    </td>
                                                    <td><input type="hidden" name="debit_positions[oxwrapcost][amount]"
                                                               value="1">1
                                                    </td>
                                                    <td>{{ edit.oxorder__oxwrapcost.value|number_format(2, ",", "") }} {{ edit.oxorder__oxcurrency.value }}</td>
                                                    <td>{{ translate({ ident: "FCPO_WRAPPING" }) }}</td>
                                                </tr>
                                            {% endif %}
                                            {% if edit.oxorder__oxgiftcardcost.value != 0 and edit.oxorder__fcpogiftcardcostdebited.value == 0 %}
                                                {% set blShowDebit = true %}
                                                <tr>
                                                    <td>
                                                        <input type="hidden"
                                                               name="debit_positions[oxgiftcardcost][price]"
                                                               value="{{ edit.oxorder__oxgiftcardcost.value }}">
                                                        <input type="hidden"
                                                               name="debit_positions[oxgiftcardcost][debit]" value="0">
                                                        <input type="checkbox"
                                                               name="debit_positions[oxgiftcardcost][debit]" value="1"
                                                               checked>
                                                    </td>
                                                    <td><input type="hidden"
                                                               name="debit_positions[oxgiftcardcost][amount]" value="1">1
                                                    </td>
                                                    <td>{{ edit.oxorder__oxgiftcardcost.value|number_format(2, ",", "") }} {{ edit.oxorder__oxcurrency.value }}</td>
                                                    <td>{{ translate({ ident: "FCPO_GIFTCARD" }) }}</td>
                                                </tr>
                                            {% endif %}
                                            {% if edit.oxorder__oxvoucherdiscount.value != 0 and edit.oxorder__fcpovoucherdiscountdebited.value == 0 %}
                                                {% set blShowDebit = true %}
                                                {% set dNegativeAmount = edit.oxorder__oxvoucherdiscount.value*-1 %}
                                                <tr>
                                                    <td>
                                                        <input type="hidden"
                                                               name="debit_positions[oxvoucherdiscount][price]"
                                                               value="{{ dNegativeAmount }}">
                                                        <input type="hidden"
                                                               name="debit_positions[oxvoucherdiscount][debit]"
                                                               value="0">
                                                        <input type="checkbox"
                                                               name="debit_positions[oxvoucherdiscount][debit]"
                                                               value="1" checked>
                                                    </td>
                                                    <td><input type="hidden"
                                                               name="debit_positions[oxvoucherdiscount][amount]"
                                                               value="1">1
                                                    </td>
                                                    <td>{{ dNegativeAmount|number_format(2, ",", "") }} {{ edit.oxorder__oxcurrency.value }}</td>
                                                    <td>{{ translate({ ident: "FCPO_VOUCHER" }) }}</td>
                                                </tr>
                                            {% endif %}
                                            {% if edit.oxorder__oxdiscount.value != 0 and edit.oxorder__fcpodiscountdebited.value == 0 %}
                                                {% set blShowDebit = true %}
                                                {% set dNegativeAmount = edit.oxorder__oxdiscount.value*-1 %}
                                                <tr>
                                                    <td>
                                                        <input type="hidden" name="debit_positions[oxdiscount][price]"
                                                               value="{{ dNegativeAmount }}">
                                                        <input type="hidden" name="debit_positions[oxdiscount][debit]"
                                                               value="0">
                                                        <input type="checkbox" name="debit_positions[oxdiscount][debit]"
                                                               value="1" checked>
                                                    </td>
                                                    <td><input type="hidden" name="debit_positions[oxdiscount][amount]"
                                                               value="1">1
                                                    </td>
                                                    <td>{{ dNegativeAmount|number_format(2, ",", "") }} {{ edit.oxorder__oxcurrency.value }}</td>
                                                    <td>{{ translate({ ident: "FCPO_DISCOUNT" }) }}</td>
                                                </tr>
                                            {% endif %}
                                        </table>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="edittext" colspan="2">
                                        <input type="button"
                                               onclick="document.myedit.fnc.value='debit';document.myedit.submit();return false;"
                                               value="{{ translate({ ident: "FCPO_EXECUTE" }) }}"
                                               style="padding: 0 4px 0 4px;">
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td class="edittext">
                                        <strong>{{ translate({ ident: "FCPO_AMOUNT_IN" }) }} {{ edit.oxorder__oxcurrency.value }}</strong>
                                    </td>
                                    <td>
                                        <input type="text" name="debit_amount" value="0,00">
                                        <input type="button"
                                               onclick="if(confirm('{{ translate({ ident: "FCPO_ARE_YOU_SURE" }) }}')) {this.form.fnc.value='debit';this.form.submit();}"
                                               value="{{ translate({ ident: "FCPO_EXECUTE" }) }}"
                                               style="padding: 0 4px 0 4px;">
                                    </td>
                                </tr>
                            {% endif %}
                        {% endcapture %}
                        {% if blShowDebit == true %}
                            {{ smarty.capture.debit_block }}
                        {% endif %}
                    {% endif %}
                    {% if status_oxid != ' - 1' and currStatus %}
                        <tr>
                            <td colspan="2" style="border-bottom: 1px solid black;"></td>
                        </tr>
                        <tr>
                            <td class="edittext" colspan="2"><strong>TransactionStatus</strong></td>
                        </tr>

                        {% if currStatus.fcpotransactionstatus__fcpo_txaction.value != '' %}
                            <tr>
                                <td class="edittext">
                                    TXACTION
                                </td>
                                <td class="edittext">
                                    {{ currStatus.fcpotransactionstatus__fcpo_txaction.value }}
                                </td>
                            </tr>
                        {% endif %}

                        {% if currStatus.fcpotransactionstatus__fcpo_portalid.value != '' %}
                            <tr>
                                <td class="edittext">
